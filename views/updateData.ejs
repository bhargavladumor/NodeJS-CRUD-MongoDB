<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update</title>
</head>
<body>
    <form action="/editData" method="post">
        <td><input type="hidden" name="oldId" value="<%= stData.id %>"></td>
        <table>
            <tr>
                <td>Enter name : </td>
                <td><input type="text" name="name" value="<%= stData.name %>"></td>
            </tr>
            <tr>
                <td>Enter age : </td>
                <td><input type="text" name="age" value="<%= stData.age %>"></td>
            </tr>
            <tr>
                <td>Select gender : </td>
                <td>
                    <input type="radio" name="gender" value="male" <% if(stData.gender == "male"){ %> <%= 'checked' %> <% } %> >Male
                    <input type="radio" name="gender" value="female" <% if(stData.gender == "female"){ %> <%= 'checked' %> <% } %> >Female
                </td>
            </tr>
            <tr>
                <td>Select hobby : </td>
                <td>
                    <input type="checkbox" name="hobby" value="Coding" <% if(stData.hobby.includes("Coding")){ %> <%= 'checked' %> <% } %> >Coding
                    <input type="checkbox" name="hobby" value="Gaming" <% if(stData.hobby.includes("Gaming")){ %> <%= 'checked' %> <% } %> >Gaming
                    <input type="checkbox" name="hobby" value="Music" <% if(stData.hobby.includes("Music")){ %> <%= 'checked' %> <% } %> >Music
                    <input type="checkbox" name="hobby" value="Traveling" <% if(stData.hobby.includes("Traveling")){ %> <%= 'checked' %> <% } %> >Traveling
                </td>
            </tr>
            <tr>
                <% var city = ["Surat","Vadodara","Bharuch","Bhavnagar"] %>
                <td>Select city : </td>
                <td>
                    <select name="city">
                        <option value="">--Select City--</option>
                        <% city.map((v)=>{ %>
                        <option value="<%= v %>" <% if(stData.city == v ){ %> <%= 'selected' %> <% } %> ><%= v %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Type message : </td>
                <td><input type="text" name="message" value="<%= stData.message %>"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Update Data"></td>
            </tr>
        </table>
    </form>
</body>
</html>